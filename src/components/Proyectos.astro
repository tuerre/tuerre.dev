---
import ButtonDashed from "./visuals/ButtonDashed.astro"

const projectInfo = [
  {
    title: "Grupo Leones Web",
    description: "Proyecto web para la empresa Grupo Leones que presenta sus distintas filiales y opciones de contacto. Incluye un panel administrativo para el envío de correos personalizados a usuarios registrados, automatización de correos y generación de reportes en PDF.",
    url: "https://github.com/Ronny-Abreu/GrupoLeones-web",
    languages: [
      "NodeJS",
      "TypeScript",
      "JavaScript",
      "Astro",
      "Tailwind",
      "Firebase",
    ]
  },
  {
    title: "Focus Mode Extension",
    description: "Extensión para Google Chrome que permite al usuario bloquear ciertos sitios web durante un período de tiempo definido. Permite gestionar los sitios bloqueados, bloquearlos durante un tiempo específico y personalizar el modo AFK. Disponible en modo DEV.",
    url: "https://github.com/tuerre/focus-mode-extension",
    languages: [
      "HTML5",
      "CSS3",
      "JavaScript",
      "Chrome", 
    ]
  },

]

---

<div class="max-w-7xl mx-auto px-4 mt-20 md:mt-0">
    <div class="max-w-7xl">
      <h2 class="info-habilities text-[#f2ce5a] font-bold text-[27px] mb-2">Proyectos</h2>

      <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {projectInfo.map((project) => (
          <div class="flex flex-col gap-0.5 border border-gray-500/70 rounded-lg p-4">
          <h4 class="info-habilities font-medium text-xl">{project.title}</h4>
          <div>

           <ul class="flex flex-wrap gap-2 mt-1">
            {project.languages.map((lenguaje) => (
              <li class="flex">
                <span class="info-habilities flex items-center gap-2 rounded-full text-xs bg-[#003159] text-white py-1 px-2.5">
                  {lenguaje}
                </span>
              </li>
            ))}
          </ul>

          </div>
          <div class="mt-3 max-h-content">
            <p class="info-habilities">{project.description}</p>

            <div class="max-w-fit mt-2">
            <ButtonDashed url={project.url}/>
          </div>
          </div>
        </div>
        ))}
      </div>
    </div>
</div>

<style>
  .info-habilities::selection {
        background-color: rgba(255, 255, 255, 0.078);
    }
</style>