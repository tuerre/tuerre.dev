---
import Layout from '../layouts/Layout.astro';
import SectionContainer from './SectionContainer.astro';

const { error = "404", errorDesc = "Esta página todavía no ha sido elaborada..." } = Astro.props;
---

<Layout>
    <SectionContainer class="relative top-[50vh] translate-y-[-50%]">
        <main class="flex flex-col gap-3 items-center justify-center">
            <h3 class="font-normal text-2xl">error <span class="font-bold">{error}</span></h3>
            <span>{errorDesc}</span>
            <a href="/" class="underline">Volver al inicio</a>
        </main>
    </SectionContainer>
</Layout>